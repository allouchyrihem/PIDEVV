{% extends 'base.html.twig' %}

{% block title %}Hello RoleController!{% endblock %}

{% block body %}
  <!-- Cart Start -->
   <a href="/addRole/" class="btn btn-sm btn-info"> Ajouter un nouveau Role </a>
    <div class="container-fluid">
        <div class="row px-xl-5">
        
            <div class="col-lg-8 table-responsive mb-5">
                <table class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Nom</th>
                            <th>Email</th>
                            <th>Addresse</th>
                            <th>Statut</th>
                        </tr>
                    </thead>
                    {% if users %}
                    <tbody class="align-middle">
                    {% for u in users %}
                        <tr>
                            <td class="align-middle">{{ u.name }}</td>
                            <td class="align-middle">{{ u.email }}</td>
                            <td class="align-middle">{{ u.adress }}</td>
                             <td class="align-middle">{{ u.status }}</td>
                            <td class="align-middle">
                            <a href="" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> </a>
                            <a href="" class="btn btn-sm btn-warning"><i class="fa fa-list" aria-hidden="true"></a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                    {% endif %}
                </table>
            </div>
        </div>
    </div>
    <!-- Cart End -->
{% endblock %}
