{% extends 'base.html.twig' %}
{% block body %}


	<div class="grix xs2 sm3 gutter-0 card">
		<div class="col-xs2 col-sm3"></div>
		<div class="col-xs2 col-sm3">

			<caption>
				<h2>Liste des commentaires</h2>
			</caption>
			<table border="3">
				<tr>
					<td>
						<h3>Commentaire</h3>
					</td>
					<td>
						<p>Publi√© le</p>
					</td>
				</tr>

				{% for comment in comment %}

					<tr>
						<td>
							{{comment.description}}</td>
						<td>
							{{comment.date|date("d/m/Y H:i") }}</td>
						<td>
							<a href="{{path('Comment_delete',{'id': comment.id}) }}" class="bg-red-500 font-bold py-2 px-4 ml-6 rounded transition-all hover:bg-red-300">
								Supprimer
							</a>
						</td>
						<td>
							<a href="{{path('Comment_update',{'id': comment.id}) }}" class="bg-red-500 font-bold py-2 px-4 ml-6 rounded transition-all hover:bg-red-300">
								Modifier
							</a>
						</td>

					</tr>

				{% endfor %}

			</table>
		</div>
	</div>
{% endblock %}
