{% extends 'base.html.twig' %}

{% block title %}Hello RoleController!{% endblock %}

{% block body %}
  <!-- Cart Start -->
   <a href="/addRole/" class="btn btn-sm btn-info"> Ajouter un nouveau Role </a>
    <div class="container-fluid">
        <div class="row px-xl-5">
        
            <div class="col-lg-8 table-responsive mb-5">
                <table class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Role</th>
                            <th>Description</th>
                            <th>Utilisateurs</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    {% if roles %}
                    <tbody class="align-middle">
                    {% for role in roles %}
                        <tr>
                            <td class="align-middle">{{ role.type }}</td>
                            <td class="align-middle">{{ role.description }}</td>
                            <td class="align-middle">uer</td>
                            <td class="align-middle">
                            <a href="/deleteRole/{{role.id}}" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> </a>
                            <a href="/updateRole/{{role.id}}" class="btn btn-sm btn-warning"><i class="fa fa-list" aria-hidden="true"></a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                    {% endif %}
                </table>
            </div>
        </div>
    </div>
    <!-- Cart End -->
{% endblock %}
