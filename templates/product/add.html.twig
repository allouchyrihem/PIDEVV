                                <td>{{form_label(FormProduit.owner,"vendeur")}} </td>
                                <td>{{form_widget(FormProduit.owner)}} </td>
                                <td>{{form_errors(FormProduit.owner)}} </td>
                                </tr>
                                <tr>
                                <td>{{form_label(FormProduit.category,"catégorie")}} </td>
                                <td>{{form_widget(FormProduit.category)}} </td>
                                <td>{{form_errors(FormProduit.category)}} </td>
                                </tr>
                                <tr>
                                <td>{{form_label(FormProduit.discount,"promos")}} </td>
                                <td>{{form_widget(FormProduit.discount)}} </td>
                                <td>{{form_errors(FormProduit.discount)}} </td>
                                </tr>
                                </table>
                                {{form_widget(FormProduit.add)}}
                                {{form_end(FormProduit)}}

    </div>
